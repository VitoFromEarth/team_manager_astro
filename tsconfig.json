{
  "extends": "astro/tsconfigs/strict",
  "include": [
    ".astro/types.d.ts",
    "**/*"
  ],
  "exclude": [
    "dist"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@infrastructure/*": [
        "src/infrastructure/*"
      ],
      "ui-kit": [
        "src/ui-kit/*"
      ]
    },
    "jsx": "react-jsx",
    "jsxImportSource": "react"
  }
}